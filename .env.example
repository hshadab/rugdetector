# Server Configuration
PORT=3000
NODE_ENV=development

# ===== SECURITY CONFIGURATION =====

# Rate Limiting (prevents DOS attacks)
RATE_LIMIT_WINDOW_MS=60000              # 1 minute window
RATE_LIMIT_MAX_REQUESTS=60              # Max 60 requests per IP per minute
PAYMENT_RATE_LIMIT_WINDOW_MS=60000      # Payment verification window
PAYMENT_RATE_LIMIT_MAX=30               # Max 30 payment verifications per IP per minute

# Payment Replay Prevention
PAYMENT_CACHE_TTL_SECONDS=3600          # Track used payments for 1 hour

# Blockchain Configuration
BASE_RPC_URL=https://mainnet.base.org
USDC_CONTRACT_ADDRESS=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913
PAYMENT_AMOUNT=100000

# Python Configuration
PYTHON_PATH=python3

# Service Configuration
SERVICE_NAME=RugDetector
SERVICE_VERSION=1.0.0

# Blockchain API Keys (for real feature extraction)
# Get free API keys from:
# - Basescan: https://basescan.org/apis (Base network)
# - Solscan: https://pro-api.solscan.io (Solana network)
BASESCAN_API_KEY=
SOLSCAN_API_KEY=

# RPC URLs for feature extraction
# Alchemy (Recommended - Better rate limits, reliability)
# Get your API key from https://www.alchemy.com/
# Replace YOUR_ALCHEMY_API_KEY with your actual key

# Base (Coinbase L2) - Primary chain
BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY

# Solana - Secondary chain
SOLANA_RPC_URL=https://solana-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY

# Alternative public RPCs (if not using Alchemy):
# BASE_RPC_URL=https://mainnet.base.org
# SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Token Analytics API (for exact holder distribution)
# Get free API key from: https://moralis.io/
MORALIS_API_KEY=

# The Graph API (for historical data)
# Free tier available at: https://thegraph.com/
THEGRAPH_API_KEY=
THE_GRAPH_API_KEY=

# DEX Subgraph URLs
UNISWAP_V2_SUBGRAPH=https://api.thegraph.com/subgraphs/name/uniswap/uniswap-v2
UNISWAP_V3_SUBGRAPH=https://api.thegraph.com/subgraphs/name/uniswap/uniswap-v3
PANCAKESWAP_V2_SUBGRAPH=https://api.thegraph.com/subgraphs/name/pancakeswap/exchange-v2
SUSHISWAP_SUBGRAPH=https://api.thegraph.com/subgraphs/name/sushi-v2/sushiswap-ethereum

# Feature Extraction Configuration
FEATURE_EXTRACTION_MODE=real  # Options: real, simulated, hybrid
FEATURE_TIMEOUT_SECONDS=30
CACHE_FEATURES=true
CACHE_TTL_SECONDS=3600

# Advanced Features Configuration
ENABLE_DEX_LIQUIDITY=true
ENABLE_HOLDER_ANALYTICS=true
ENABLE_HISTORICAL_ANALYSIS=true
MAX_HISTORICAL_DAYS=90
